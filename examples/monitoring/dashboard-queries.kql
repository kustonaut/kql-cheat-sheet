// Live System Health (last 5 minutes)
let SystemHealth = requests
| where timestamp > ago(5m)
| summarize 
    TotalRequests = count(),
    ErrorCount = countif(success == false),
    AvgResponseTime = avg(duration)
| extend 
    ErrorRate = round((ErrorCount * 100.0) / TotalRequests, 2),
    RequestsPerMinute = round(TotalRequests / 5.0, 1);
let InfraHealth = performanceCounters
| where TimeGenerated > ago(5m)
| where CounterName == "% Processor Time" and InstanceName == "_Total"
| summarize AvgCPU = avg(CounterValue);
SystemHealth
| extend AvgCPU = toscalar(InfraHealth)
| project 
    ["ðŸ”„ Requests/Min"] = RequestsPerMinute,
    ["âš¡ Avg Response"] = strcat(round(AvgResponseTime, 0), " ms"),
    ["âŒ Error Rate"] = strcat(ErrorRate, "%"),
    ["ðŸ–¥ï¸ CPU Usage"] = strcat(round(AvgCPU, 1), "%"),
    ["â° Last Update"] = format_datetime(now(), "HH:mm:ss"),
    ["ðŸš¦ Overall Status"] = case(
        ErrorRate > 5 or AvgResponseTime > 3000 or AvgCPU > 90, "ðŸ”´ Critical",
        ErrorRate > 2 or AvgResponseTime > 1500 or AvgCPU > 80, "ðŸŸ¡ Warning", 
        "ðŸŸ¢ Healthy"
    )
